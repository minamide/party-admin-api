		"test:d1": "vitest run --config vitest.d1.config.ts"
	},
	"dependencies": {
		"drizzle-orm": "^0.45.1",
		"hono": "^4.11.1"
	},
	"devDependencies": {
		"@vitest/ui": "^4.0.16",
		"drizzle-kit": "^0.31.8",
		"happy-dom": "^20.0.11",
		"vitest": "^4.0.16",
		"wrangler": "^4.56.0"
	}
}
